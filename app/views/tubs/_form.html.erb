<%= simple_form_for @tub do |f| %>
  <%= f.input :name %>
  <%= f.input :address,
    input_html: {data: {address_autocomplete_target: "address"},
      class: "d-none"
      },
    wrapper_html: {data: {
      controller: "address-autocomplete",
      address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]
      }}
  %>
  <%= f.input :description, as: :text %>
  <%= f.input :price %>
  <%= f.input :size, collection: Tub::SIZES %>
  <%= f.input :category, collection: Tub::CATEGORIES %>
  <%= f.submit class: "btn btn-primary"%>
<% end %>
